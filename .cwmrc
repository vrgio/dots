# colours
color inactiveborder "#d3cef2"
color activeborder "#C43B41"
color menufg "#443AC8"
color menubg "#736f8f"
color font "#f5f0ff"
color selfont "#81B86A"

# set font for menus
fontname "SourceCodePro:pixelsize=14"

# divide screen
vtile 49
htile 49
gap 0 1 0 1

# KEYBINDINGS:
# 4 = windows key
# S = shift
# C = control
# M = alt

bind-key 4-Return urxvt
bind-key 4-p dmenu_run
bind-key 4-m menu-cmd
bind-key 4-backslash window-vtile
bind-key 4-slash window-htile
bind-key 4-F1 "sleep 2;import -window root screen.png"
bind-key 4-x quit

ignore bar

# menu-cmd
command terminal "urxvt256c"
command firefox "firefox"
command gvim "gvim"
command file-manager "pcmanfm"
command mocp "urxvt256c -e mocp"
command thunder "thunderbird"
command calc "xcalc"
command tmux "urxvt256c -e tmux attach"
command screens "import -window root screen.png"
